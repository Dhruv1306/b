<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <style>
      body {
        margin: 0;
        font-family: Arial, sans-serif;
      }
      .navbar {
        background-color: #2c3e50;
        color: #fff;
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .navbar .logo {
        font-weight: bold;
        font-size: 1.2rem;
      }
      .navbar .username {
        background: #34495e;
        padding: 0.5rem 1rem;
        border-radius: 20px;
      }
      .dashboard-content {
        padding: 2rem;
      }
    </style>
  </head>
  <body>
    <nav class="navbar">
      <div class="logo">Admin Dashboard</div>
      <div class="username">Welcome, <%= adminName %></div>
    </nav>
    <div class="dashboard-content">
      <h2>Admin Panel: Active Sessions</h2>
      <table border="1" cellpadding="6">
        <thead>
          <tr>
            <th>Username</th>
            <th>Login Time</th>
            <th>Session Expiration</th>
            <th>Session ID</th>
          </tr>
        </thead>
        <tbody>
          <% sessions.forEach(function(s) { %>
          <tr>
            <td><%= s.username %></td>
            <td><%= new Date(s.loginTime).toLocaleString() %></td>
            <td>
              <%= s.expiresAt ? new Date(s.expiresAt).toLocaleString() : '-' %>
            </td>
            <td><%= s.sessionID %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <br />
      <a href="/dashboard/admin">Back to Dashboard</a>
      <a href="/logout" style="margin-left: 20px">Logout</a>
    </div>
  </body>
</html>
