<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Student - Student Management System</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
    <link href="/header.css" rel="stylesheet" />
    <link href="/footer.css" rel="stylesheet" />
    <script src="/header.js" defer></script>
    <script src="/footer.js" defer></script>
  </head>
  <body class="edit-page">
    <!-- Include Header -->
    <%- include('partials/header') %>
    
    <div class="edit-container">
        <p>Update student information</p>
      </div>

      <div class="content">
        <div class="student-info">
          <h3><i class="fas fa-user"></i> Currently Editing</h3>
          <p><%= student.name %> (ID: <%= student.index %>)</p>
        </div>

        <div class="form-section">
          <form
            action="/update-student/<%= student._id %>"
            method="POST"
            id="editForm"
          >
            <div class="form-group">
              <label for="name"> <i class="fas fa-user"></i> Full Name </label>
              <div class="input-icon">
                <input
                  type="text"
                  id="name"
                  name="name"
                  value="<%= student.name %>"
                  placeholder="Enter student name"
                  required
                />
                <i class="fas fa-user"></i>
              </div>
            </div>

            <div class="form-group">
              <label for="age"><i class="fas fa-calendar-alt"></i> Age </label>
              <div class="input-icon">
                <input
                  type="number"
                  id="age"
                  name="age"
                  value="<%= student.age %>"
                  placeholder="Enter age"
                  min="5"
                  max="50"
                  required
                /><i class="fas fa-birthday-cake"></i>
              </div>
            </div>

            <div class="form-group">
              <label for="class"><i class="fas fa-school"></i> Class </label>
              <div class="input-icon">
                <input
                  type="text"
                  id="class"
                  name="class"
                  value="<%= student.class %>"
                  placeholder="Enter class"
                  required
                /><i class="fas fa-chalkboard"></i>
              </div>
            </div>

            <div class="form-group">
              <label for="marks"
                ><i class="fas fa-chart-line"></i> Marks
              </label>
              <div class="input-icon">
                <input
                  type="number"
                  id="marks"
                  name="marks"
                  value="<%= student.marks %>"
                  placeholder="Enter marks"
                  min="0"
                  max="100"
                  required
                /><i class="fas fa-trophy"></i>
              </div>
            </div>

            <div class="btn-group">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update Student
              </button>
              <a href="/" class="btn btn-secondary"
                ><i class="fas fa-arrow-left"></i> Back to Home
              </a>
            </div>
          </form>
        </div>

        <div class="success-animation" id="successAnimation">
          <i class="fas fa-check-circle"></i>
          <h3>Student Updated Successfully!</h3>
          <p>Redirecting to home page...</p>
        </div>
      </div>
    </div>

    <script>
      // Add form submission animation
      document
        .getElementById("editForm")
        .addEventListener("submit", function (e) {
          const submitBtn = document.querySelector(".btn-primary");
          submitBtn.innerHTML =
            '<i class="fas fa-spinner fa-spin"></i> Updating...';
          submitBtn.disabled = true;
        });

      // Add input validation feedback
      const inputs = document.querySelectorAll("input");
      inputs.forEach((input) => {
        input.addEventListener("input", function () {
          if (this.validity.valid) {
            this.style.borderColor = "#48bb78";
          } else {
            this.style.borderColor = "#e53e3e";
          }
        });
      });
    </script>

    <!-- Include Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
